<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <!-- fresco style start-->
  <style name="fresco_base">
    <item name="fadeDuration">0</item>
    <item name="placeholderImageScaleType">fitCenter</item>
    <item name="failureImageScaleType">center</item>
  </style>

  <style name="Theme.Splash.Light" parent="Base.Theme.AppCompat.Light">
    <item name="windowNoTitle">true</item>
    <item name="android:windowBackground">@color/white</item>
  </style>

  <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
    <item name="tabBackground">@color/title_blue</item>
    <item name="tabIndicatorColor">@android:color/transparent</item>
    <item name="tabIndicatorHeight">0dp</item>
    <item name="tabSelectedTextColor">@color/colorAccent</item>
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="fresco_profile_white_border" parent="fresco_base">
    <item name="roundAsCircle">true</item>
    <item name="backgroundImage">@color/white</item>
    <item name="roundingBorderWidth">3dp</item>
    <item name="roundingBorderColor">@color/white</item>
    <item name="actualImageScaleType">centerCrop</item>
    <item name="placeholderImage">@drawable/touxiang</item>
  </style>

</resources>
